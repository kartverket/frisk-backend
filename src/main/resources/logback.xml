<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{YYYY-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>
    <root level="WARN">
        <appender-ref ref="STDOUT"/>
    </root>
    <logger name="org.eclipse.jetty" level="INFO"/>
    <logger name="io.netty" level="INFO"/>
    <logger name="ktor.application" level="INFO"/>
    <logger name="kartverket.com" level="INFO"/>
    <logger name="FunctionRoutes" level="INFO"/>
    <logger name="Database" level="INFO"/>
    <logger name="FunctionDependencyService" level="INFO"/>
    <logger name="FunctionService" level="INFO"/>
</configuration>